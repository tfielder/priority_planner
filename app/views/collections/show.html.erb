<p style="color: green"><%= notice %></p>

<%= render @collection %>

<div class="flexit-center flexit-spaced">
  <div class="option">
    <%= link_to "Edit", edit_collection_path(@collection) %> |
  </div>
  <div class="option">
    <%= link_to "Add Item", collection_items_path(@collection) %> |
  </div>
  <div class="option">
    <%= link_to "Back to collections", collections_path %> |
  </div>
  <div class="option">
    <%= button_to "Destroy", @collection, method: :delete, :class => "button-to-text" %>
  </div>
</div>

<h2>Items</h2>
<% for item in @collection.items %>
  <ul>
    <li><%= item.title %></li>
  </ul>
<% end %>

<div class="flexit-center">
  <%= link_to "Sort My Collection", sort_collection_path(@collection), class: "button" %>
</div>